<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_deal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_common_bg"
    tools:context="com.pandatv.user.activity.DealActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <Button
                android:id="@+id/agree_post_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:background="@null"
                android:drawableLeft="@drawable/fenlei_fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="央视网络服务使用协议"
                android:textColor="@color/title_bar_title_color"
                android:textSize="18dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_divider_line_bg" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="11dp">

            <TextView
                android:id="@+id/agree_post_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agree_post"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </ScrollView>

    </LinearLayout>
</RelativeLayout>
