<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="420px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/headview_picture"
        android:layout_width="match_parent"
        android:layout_height="325px"
        android:src="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/headview_iv"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_alignBottom="@id/headview_picture"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/pe_top_txt_bg" />

    <TextView
        android:id="@+id/headview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="25px"
        android:layout_marginLeft="30px"
        android:layout_above="@+id/headview_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>