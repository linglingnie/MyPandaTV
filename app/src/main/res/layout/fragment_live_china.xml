<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pandatv.ui.liveChina.LiveChinaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="直播中国"
            />
        <ImageView
            android:id="@+id/liveChina_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_sign"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/liveChina_tablayout"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/colorPrimaryDark"
            app:tabTextColor="#000"
            app:tabIndicatorColor="@color/colorPrimaryDark"
            ></android.support.design.widget.TabLayout>
        <ImageView
            android:id="@+id/live_china_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/live_china_add"
            />
    </LinearLayout>


    <com.pandatv.ui.live.noScrollViewPager.NoScrollViewPager
        android:id="@+id/liveChina_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ></com.pandatv.ui.live.noScrollViewPager.NoScrollViewPager>
</LinearLayout>
